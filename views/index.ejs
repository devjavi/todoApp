
<% include ./layouts/header%>
    <div class="container">

  <h1>myTodo App</h1>
  <p>Welcome to myTodo App </p>
</div>
<% if(!currentUser) { %>

<!-- This is what you get if you're not logged-->
    <div class="container">
        <div id="container-2">
            <form action="/login" method="post">
                <p><strong>Login</strong></p>
                <div class="form-group">
                <label for="username">Username</label>
                <input type="text" name="username" id="usernamel" placeholder="jonnybones">
                </div>
                <div class="form-group">
                <label for="passwordl">Password</label>
                <input type="password" name="password" id="passwordl" placeholder="password">
                </div>
                <button type="submit">Log In</button>
            </form>
        </div>

        <div id="container-2">
            <p><strong>Register</strong></p>
            <form action="/register" method="post">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" name="username" id="usernameR" placeholder="jonnybones" required>
                </div>
                <div class="form-group">
                    <label for="fName">First Name</label>
                    <input type="text" name="fName" id="fName" placeholder="Jon" required>
                </div>
                <div class="form-group">
                    <label for="lName">Last Name</label>
                    <input type="text" name="lName" id="lName" placeholder="Jones" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" placeholder="jonjones@gmail.com" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" required>
                </div>
                <div class="form-group">
                    <label for="iad">Are you an admin? </label>
                    <input type="checkbox" id="iad" name="isAdmin">
                </div>
                <button type="submit">Register</button>
            </form>
        </div>
    </div>
<!–– ––>
<%} else if(currentUser.isAdmin){;%>

<!-- This is what you get if you log in and you're an admin-->

    <div id="container-2">
        <p>This is what you get when logged in and you're and admin</p>
        <form action="/logout" method="GET">
            <button>Logout</button>
        </form>
    </div>

    <%console.log(currentUser)%>
<% } else{%>
<!-- This is what you get if you're logged in and are not an admin-->
    <div id="container-2">
        <p>This is what you get when logged in and you're a gato</p>
        <form action="/logout" method="GET">
            <button>Logout</button>
        </form>
    </div>

<% } %>


</body>
</html>
